<Page x:Class="Marat.Views.Pages.StartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Marat.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StartPage">

    <Grid Background="White">
        <Button x:Name="buttonToApplicants" Content="Кандидаты" HorizontalAlignment="Left" Margin="220,120,0,0" VerticalAlignment="Top" Width="380" Height="70" Click="buttonToApplicants_Click" FontSize="14" Background="#FF7BA7F3" />
        <Button x:Name="buttonToFrames" Content="Кадры" HorizontalAlignment="Left" Margin="220,195,0,0" VerticalAlignment="Top" Width="380" Height="70" FontSize="14" Background="#FF7BA7F3" Click="buttonToFrames_Click"/>
        <Button x:Name="buttonToPosition" Content="Должности" HorizontalAlignment="Left" Margin="220,270,0,0" VerticalAlignment="Top" Width="380" Height="70" FontSize="14" Background="#FF7BA7F3" Click="buttonToPosition_Click"/>
    </Grid>
</Page>
